<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import java.net.URL?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.TextField?>
<BorderPane fx:id="rootPane"
            xmlns="http://javafx.com/javafx/16"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lab6.ui.controllers.AuthController"
            styleClass="rootPane">
    <stylesheets>
        <URL value="@/css/main.css"/>
    </stylesheets>
    <top>
        <fx:include source="components/Header.fxml"/>
    </top>
    <center>
        <VBox styleClass="container">
            <Label fx:id="modeLabel" styleClass="boldLabel" text="%form.label.auth"></Label>
            <stylesheets>
                <URL value="@/css/form.css"/>
            </stylesheets>

            <Label fx:id="nameLabel" text="%form.label.name"></Label>
            <TextField fx:id="nameField" promptText="%form.input.promt.name"></TextField>

            <Label fx:id="passLabel" text="%form.label.pass"></Label>
            <TextField fx:id="passField" promptText="%form.input.promt.pass"></TextField>

            <Label fx:id="messageLabel" styleClass="messageLabel" text="test"></Label>

            <Button fx:id="authButton" styleClass="button" text="%form.button.auth" onAction="#auth"></Button>
            <fx:include source="components/BackButton.fxml"/>
        </VBox>
    </center>
</BorderPane>
